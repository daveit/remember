<h3>Suburb Maintenance</h3>

<%= form_tag suburbs_path, method: :get do %>
    <p>
      <%= text_field_tag :query, params[:query] %>
      <%= submit_tag 'Search', name: nil, :class => 'btn btn-success btn-sm' %>
      <%= submit_tag 'Reset', name: nil, :class => 'btn btn-danger btn-xs' %>
    </p>
<% end %>

<div class="table-responsive">
<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Suburb name:</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @suburbs.each do |suburb| %>
      <tr>
        <td><%= link_to suburb.name, edit_suburb_path(suburb) %></td>
        <td><%= link_to 'Delete', suburb, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= paginate @suburbs %>
<%= button_to 'New Suburb', new_suburb_path, :class => "btn btn-info", :method => :get %>
<br>
<p>Click suburb name to edit!</p>