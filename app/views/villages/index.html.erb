<h2>Listing villages</h2>

<div class="table-responsive">
<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Suburb</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Financial to</th>
      <th>Residents</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @villages.each do |village| %>
      <tr>
        <td><%= village.name %></td>
        <td><%= village.address %></td>
        <td><%= village.suburb.name %></td>
        <td><%= village.phone %></td>
        <td><%= village.email %></td>
        <td><%= village.financial_to %></td>
        <td><%= village.residents %></td>
        <td><%= link_to 'Show', village %></td>
        <td><%= link_to 'Edit', edit_village_path(village) %></td>
        <td><%= link_to 'Destroy', village, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= button_to 'New Village', new_village_path, :class => "btn btn-info", :method => :get %>